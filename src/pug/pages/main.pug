extends ../template

include ../mixins/goods-slider.pug

block variables
  - var title = 'Главная'
  - var breadcrumbs = 0
  - var headerAbsolut = 1

block content
  section.banner.margin-section 
    picture
      source(type="image/webp" srcset="images/banner-main.jpg")
      img.banner__img(src="images/banner-main.jpg" alt="Новая коллекция")
    a.banner__btn(href="#") Новая коллекция
  section.collections.margin-section 
    .container 
      .collections__row 
        .collections__col 
          picture.collections__picture
            source(type="image/webp" srcset="images/collections1.jpg")
            img.collections__img(src="images/collections1.jpg" alt="коллекция стрит")
        .collections__col 
          picture.collections__picture
            source(type="image/webp" srcset="images/collections2.jpg")
            img.collections__img(src="images/collections2.jpg" alt="коллекция стрит")
        .collections__col 
          h3.collections__title коллекция 
            a(href="#") стрит

      .collections__row 
        .collections__col 
          p.collections__text В выборе одежды главными ориентирами для нас остаются комфорт и функциональность. Качество наших материвалов позволяет вещам оставаться в гардеробе длительное время
          a.collections__link(href="#") о компании
        .collections__col 
          picture.collections__picture
            source(type="image/webp" srcset="images/collections1.jpg")
            img.collections__img(src="images/collections1.jpg" alt="коллекция концепт")
          h3.collections__title коллекция 
            a(href="#") концепт
        .collections__col 
          picture.collections__picture
            source(type="image/webp" srcset="images/collections3.jpg")
            img.collections__img(src="images/collections3.jpg" alt="женская коллекция")
          h3.collections__title 
            a(href="#") женская
            |  коллекция

  +goods-slider('Новые поступления')(class="h1title")

  +goods-slider('Бестселлеры')(class="h1title")