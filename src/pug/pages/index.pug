extends ../template

block variables
  - var title = 'Карта сайта'

block content
  style.
    .h1title{
      margin-bottom: 50px
    }
    table{
      width: 100%;
      border-collapse: collapse;
    }
    td{
      width: 50%;
      border: 1px solid var(--black-primary);
      transition: background-color .1s
    }
    td:hover{
      background-color: var(--black-100);
    }
    td a{
      display: block;
      padding: 20px;
    }
    @media screen and (max-width: 767px) {
      tr,
      td {
        display: block
      }
      tr:not(:last-child) td{
        border-bottom: none
      }
      td{
        width: 100%
      }
      td a{
        padding: 10px;
        font-size: 16px;
      }
    }
  .container.map__container.margin-section
    h1.h1title Карта сайта
    table
      tbody
        tr
          td 
            a(href="main.html" target="_blank") Главная
        tr
          td 
            a(href="catalog.html" target="_blank") Каталог
          td 
            a(href="good.html" target="_blank") Товар
        tr
          td 
            a(href="cart.html" target="_blank") Корзина
          td 
            a(href="fav.html" target="_blank") Избранное
        tr
          td 
            a(href="company.html" target="_blank") О компании
        tr
          td 
            a(href="addresses.html" target="_blank") Адреса магазинов
        tr
          td 
            a(href="contacts.html" target="_blank") Контакты
        tr
          td 
            a(href="text.html" target="_blank") Текстовая страница
