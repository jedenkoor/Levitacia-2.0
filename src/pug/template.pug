block variables

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(content="" name="description")
    meta(content="" name="keywords")
    title #{title}

    <meta property="og:site_name" content="Levitacia">
    <meta property="og:title" content="Levitacia">
    <meta property="og:description" content="Levitacia">
    <meta property="og:type" content="website">
    <meta property="og:url" content="levitacia.ru">
    <meta property="og:image" content="images/og-share-img.jpg">
    <meta property="og:image:width" content="1800">
    <meta property="og:image:height" content="945">

    <link rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png">
    <link rel="manifest" href="images/favicon/site.webmanifest">
    <link rel="mask-icon" href="images/favicon/safari-pinned-tab.svg" color="#959595">
    <meta name="msapplication-TileColor" content="#a67ef9">
    <meta name="theme-color" content="#ffffff">


  body(style="opacity: 0")
    if(breadcrumbs === 0)
      style. 
        .breadcrumbs{
          display: none
        }
    if(headerAbsolut === 1)
      style. 
        .header{
          position: absolute;
          width: 100%;
          
        }
        @media (any-hover: hover) and (pointer: fine) {
          .header:hover,
          .header-menu__submenu{
            background-color: var(--white-on-pic-bg);
          }
        }

    .wrapper
      include includes/header.pug
      main.content
        block content
        if(subscribe === 1)
          include includes/subscribe.pug
      include includes/popup-city.pug
      include includes/popup-subscribe.pug
      include includes/popup-table.pug
      include includes/footer.pug